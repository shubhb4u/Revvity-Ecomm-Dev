<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Ecom My Account Quick Order</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="enableRecommendations" type="Boolean" label="Enable recommendations" />
            <property name="recommendationsToShow" type="String" label="Recommendations to show"
                description="Comma separated recommendations name (favorites, recentlyOrdered, recentlyViewed)" />
            <property name="recommendationTitles" type="String" label="Recommendation titles"
                description="Semi-colon separated recommendations title(s)" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>