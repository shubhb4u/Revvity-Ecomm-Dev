<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Self Service List Orders</masterLabel>

    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="heading" type="String" label="Heading text" />
            <property name="orderNotFoundMessage" type="String" label="Order Not Found Message" />

            <property name="orderNumberLabel" type="String" label="Order Number Label" />
            <property name="orderPONumberLabel" type="String" label="Order PO Number Label" />
            <property name="orderDateLabel" type="String" label="Order Date Label" />
            <property name="orderStatusLabel" type="String" label="Order Status Label" />

            <property name="startDateMonthOffset" type="Integer" label="Start Date Month Offset"
                description="Number of months to look back for orders. E.g., -12 for last 12 months, -6 for last 6 months." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>